<script>
  import Swiper, { Navigation, Pagination } from "swiper";

  (function () {
    new Swiper(".swiper", {
      modules: [Navigation, Pagination],
      spaceBetween: 0,
      loop: false,
      pagination: {
        el: ".swiper-pagination",
        type: "bullets",
        clickable: true,
      },
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
    });
  })();
</script>
