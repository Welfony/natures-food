---
import Layout from "../layouts/Layout.astro";
import HeroImage from "../components/HeroImage.astro";
import ContactForm from "../components/ContactForm.astro";

const backgroundImage = `${
  import.meta.env.BASE_URL
}background/contact-us-banner.jpg`;
const description =
  "Complete control over products allows us to ensure our customers receive the best quality prices and service. We take great pride in everything that we do in our factory.";
---

<Layout title="Contact Us" description={description}>
  <HeroImage
    active="contact"
    title="Contact Us"
    description={description}
    background={backgroundImage}
  />
  <div id="content" class="contact standalone">
    <div class="contact-body">
      <div class="container">
        <div class="form-wrapper">
          <div class="row">
            <div class="col-md-12 col-lg-4 contact-panel">
              <h4>When?</h4>
              <p>7 days a week,</p>
              <p>9:00 am - 12:00 pm</p>
              <h4>Get in touch</h4>
              <p>supoort@naturesfoods.com</p>
              <p>phone: 66 666 6666 66</p>
            </div>

            <div class="col-md-12 col-lg-8 contact-form">
              <h4>Contact Us</h4>
              <p>Contact Form, we will get back to you as soon as possible!</p>
              <ContactForm />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
