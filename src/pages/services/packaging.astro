---
import Layout from "../../layouts/Layout.astro";
import HeroImage from "../../components/HeroImage.astro";

const backgroundImage = `${
  import.meta.env.BASE_URL
}background/packaging-banner.jpg`;
const description =
  "Nature's Food Australia has the capacity to pack products in almost any form. We have close relationship with many major packaging material manufacturers and supplier worldwide.";
---

<Layout title="Packaging" description="">
  <HeroImage
    active="services"
    title="Packaging"
    description={description}
    background={backgroundImage}
  />
  <section id="content" class="packaging">
    <div class="container">
      <div class="section-title">
        <p class="text-start">
          Nature's Food Australia has the capacity to pack products in almost
          any form. We have close relationship with many major packaging
          material manufacturers and supplier worldwide. This extensive packing
          supplier network allows us to meet clients' specific needs for new and
          existing products.
        </p>
        <h5 class="text-start mt-5">
          Packaging options include bottles, jar, cans and sachets.
        </h5>

        <div class="background">
          <div class="row">
            <div class="col-6 col-lg-3 mb-5 mb-lg-0">
              <div class="icon">
                <img
                  src={`${
                    import.meta.env.BASE_URL
                  }icons/packaging/packaging-botles.svg`}
                />
                <strong>Bottles</strong>
              </div>
            </div>
            <div class="col-6 col-lg-3 mb-5 mb-lg-0">
              <div class="icon">
                <img
                  src={`${
                    import.meta.env.BASE_URL
                  }icons/packaging/packaging-jar.svg`}
                />
                <strong>Jar</strong>
              </div>
            </div>
            <div class="col-6 col-lg-3 mb-5 mb-lg-0">
              <div class="icon">
                <img
                  src={`${
                    import.meta.env.BASE_URL
                  }icons/packaging/packaging-cans.svg`}
                />
                <strong>Cans</strong>
              </div>
            </div>
            <div class="col-6 col-lg-3 mb-5 mb-lg-0">
              <div class="icon">
                <img
                  src={`${
                    import.meta.env.BASE_URL
                  }icons/packaging/packaging-sachets.svg`}
                />
                <strong>Sachets</strong>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
